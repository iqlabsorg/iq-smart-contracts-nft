{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./test",
      "./tasks",
      "./typechain",
    ],
  },
  "include": [
    "src",
    "tasks",
  ],
  "exclude": [
    "test/**/*",
  ],
  "files": [
    "./hardhat.config.ts",
  ]
}
