{
  "name": "@iqprotocol/solidity-contracts-v2",
  "keywords": [
    "IQ Protocol",
    "evm",
    "smart-contracts",
    "hardhat",
    "solidity"
  ],
  "repository": "github:iqlabsorg/iq-smart-contracts-nft",
  "license": "MIT",
  "author": "IQ Labs (https://iqlabs.org/)",
  "scripts": {
    "compile": "hardhat compile",
    "compile:clean": "hardhat clean",
    "dev": "hardhat node --watch",
    "format": "prettier --check '**/*.{ts,js,sol}'",
    "format:fix": "prettier --write '**/*.{ts,js,sol}'",
    "gas": "cross-env REPORT_GAS=true HARDHAT_DEPLOY_FIXTURE=true hardhat test $(find test/unit -name '*.test.ts')",
    "lint": "eslint '**/*.{js,ts}' && solhint 'contracts/**/*.sol'",
    "lint:fix": "eslint --fix '**/*.{js,ts}' && solhint --fix 'contracts/**/*.sol'",
    "prepare": "husky install",
    "size": "cross-env REPORT_SIZE=true hardhat compile",
    "test": "yarn test:unit",
    "test:unit": "cross-env HARDHAT_DEPLOY_FIXTURE=true HARDHAT_COMPILE=true hardhat test $(find test/unit -name '*.test.ts')"
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint --fix",
    "contracts/**/*.sol": "solhint --fix",
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@fintechstudios/eslint-plugin-chai-as-promised": "^3.1.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@latest",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@openzeppelin/contracts": "4.4.1",
    "@openzeppelin/contracts-upgradeable": "4.4.1",
    "@openzeppelin/hardhat-upgrades": "^1.13.0",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-ethers": "^0.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "hardhat": "^2.7.0",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-deploy": "^0.9.14",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "mocha": "^9.1.3",
    "prettier": "^2.5.0",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "sort-package-json": "^1.53.1",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "4.4.4"
  },
  "engines": {
    "node": ">=16"
  }
}
